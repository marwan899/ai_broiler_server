{
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": ["flock_data.json"]
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    { 
      "src": "/admin-dashboard.html", 
      "dest": "/admin-dashboard.html" 
    },
    { 
      "src": "/",
      "dest": "/index.html" 
    }
  ]
}
